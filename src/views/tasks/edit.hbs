<div class="row">
  <div class="col-md-4 offset-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/tasks/edit/{{task._id}}" method="POST">
        <div class="form-group">
            <input type="text" name="title" value="{{task.title}}" placeholder="Write your title"  class="form-control ">
        </div>
        <div class="form-group">
            <input class="form-control" value="{{task.description}}" type="text" name="description" placeholder="Write a description">
        </div>
        <button type="submit" class="btn btn-success btn-block">save</button>
        </form>
      </div>
    </div>
  </div>
</div>